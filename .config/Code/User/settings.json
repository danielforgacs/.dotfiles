// install expention:
// $ code --install-extension ms-python.python
//
// Extenstions:
// ms-python.python
// alefragnani.Bookmarks
// EditorConfig.EditorConfig
// ms-python.vscode-pylance

{
    // Files
    "files.autoSave": "off",
    "files.eol": "\n",
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true
    },

    // editor
    "editor.renderWhitespace": "selection",
    "editor.insertSpaces": true,
    "editor.accessibilitySupport": "off",
    "editor.comments.ignoreEmptyLines": false,
    "editor.cursorSurroundingLines": 3,
    "editor.cursorWidth": 3,
    "editor.dragAndDrop": false,
    "editor.find.addExtraSpaceOnTop": false,
    "editor.find.autoFindInSelection": "multiline",
    "editor.foldingStrategy": "auto",
    "editor.hover.enabled": true,
    "editor.hover.sticky": true,
    "editor.inlineHints.enabled": true,
    "editor.lightbulb.enabled": true,
    "editor.linkedEditing": false,
    "editor.maxTokenizationLineLength": 20000,
    "editor.minimap.enabled": false,
    "editor.parameterHints.enabled": true,
    "editor.renderControlCharacters": true,
    "editor.renderLineHighlight": "all",
    "editor.rulers": [79],
    "editor.selectionHighlight": true,
    "editor.semanticHighlighting.enabled": "configuredByTheme",
    "editor.semanticTokenColorCustomizations": {},
    "editor.showFoldingControls": "mouseover",
    "editor.showUnused": true,
    "editor.smartSelect.selectLeadingAndTrailingWhitespace": true,
    "editor.smoothScrolling": false,
    "editor.snippetSuggestions": "inline",
    "editor.stablePeek": true,
    "editor.stickyTabStops": true,
    "editor.suggest.insertMode": "insert",
    "editor.suggest.localityBonus": false,
    "editor.trimAutoWhitespace": true,
    "editor.wordBasedSuggestions": true,
    "editor.wordBasedSuggestionsMode": "matchingDocuments",
    "editor.wordWrap": "off",
    "editor.wordWrapColumn": 80,
    "editor.wrappingIndent": "same",
    "editor.fontSize": 13,
    "editor.suggestSelection": "first",
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
    },
    "editor.tokenColorCustomizations": {
        // "comments": "#555555",
    },

    // workbench
    "workbench.editor.enablePreview": false,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.enableExperiments": false,
    "workbench.startupEditor": "none",
    "workbench.tree.indent": 26,
    "workbench.tree.renderIndentGuides": "always",
    "workbench.panel.defaultLocation": "right",
    "workbench.settings.useSplitJSON": true,
    "workbench.settings.openDefaultSettings": true,
    "workbench.activityBar.visible": false,
    "workbench.editorAssociations": [
        {
            "viewType": "jupyter.notebook.ipynb",
            "filenamePattern": "*.ipynb"
        }
    ],
    "workbench.activityBar.iconClickBehavior": "focus",
    "workbench.editor.labelFormat": "short",
    "workbench.editor.splitOnDragAndDrop": false,
    "workbench.editor.tabCloseButton": "left",
    "workbench.editor.wrapTabs": true,
    "workbench.list.keyboardNavigation": "filter",
    "workbench.panel.opensMaximized": "never",
    "workbench.settings.editor": "json",
    "workbench.settings.openDefaultKeybindings": true,
    "workbench.view.alwaysShowHeaderActions": true,

    // window
    "window.customMenuBarAltFocus": false,
    "window.title": "${dirty}${activeEditorShort}${separator}${rootName}${separator}${appName}",
    "window.zoomLevel": 1.6,

    // diffEditor
    "diffEditor.codeLens": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.renderSideBySide": false,

    // explorer
    "explorer.compactFolders": false,
    "explorer.incrementalNaming": "smart",
    "explorer.openEditors.visible": 0,
    "explorer.sortOrder": "type",

    // python
    "python.analysis.diagnosticMode": "workspace",
    "python.languageServer": "Pylance",
    "python.analysis.autoImportCompletions": false,
    "python.showStartPage": false,

    // format specific
    "[python]": {
        // "files.trimTrailingWhitespace": true,
        // "files.insertFinalNewline": true,
        "editor.rulers": [
            79
        ]
    },
    "[html]": {
        // "files.trimTrailingWhitespace": true,
        // "files.insertFinalNewline": true,
    },

    // misc
    "search.quickOpen.includeHistory": false,
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true
    },
    "search.followSymlinks": true,
    "search.quickOpen.includeSymbols": true,
    "search.searchEditor.defaultNumberOfContextLines": 5,
    "search.searchOnType": true,
    "search.seedOnFocus": false,
    "search.showLineNumbers": true,
    "search.sortOrder": "default",
    "search.useGlobalIgnoreFiles": true,
    "search.useIgnoreFiles": true,
    "search.mode": "newEditor",

    "update.showReleaseNotes": false,


    // debug
    "debug.allowBreakpointsEverywhere": false,
    "debug.console.closeOnEnd": true,
    "debug.console.collapseIdenticalLines": false,
    "debug.inlineValues": true,
    "debug.internalConsoleOptions": "neverOpen",
    "debug.openDebug": "neverOpen",
    "debug.showBreakpointsInOverviewRuler": true,
    "debug.showInStatusBar": "always",
    "debug.terminal.clearBeforeReusing": true,
    "debug.toolBarLocation": "docked",
    "launch": {
        "configurations": [],
        "compounds": []
      }


}
